<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <UseWPF>true</UseWPF>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <LangVersion>10</LangVersion>
        <PackageVersion>0.1.0</PackageVersion>
        <Title>Some simple but useful usercontrol for WPF.</Title>
        <Authors>Zhong Wei</Authors>
        <Description>Some simple but useful usercontrol for WPF.</Description>
        <RepositoryUrl>https://github.com/zhongwcool/Mar.Controls.git</RepositoryUrl>
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
        <PackageReleaseNotes>1. Add CircularProgressBar</PackageReleaseNotes>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <TargetFrameworks>net461;net472;net48;net5.0-windows10.0.18362.0</TargetFrameworks>
    </PropertyGroup>
    
    <ItemGroup>
        <None Include="LICENSE" Pack="true" PackagePath=""/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="ModernWpfUI" Version="0.9.6"/>
    </ItemGroup>

</Project>
