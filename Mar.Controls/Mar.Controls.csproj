<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <UseWPF>true</UseWPF>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <LangVersion>12</LangVersion>
        <PackageVersion>0.3.5</PackageVersion>
        <Title>Some useful control for WPF.</Title>
        <Authors>Zhong Wei</Authors>
        <Description>Some useful control for WPF.</Description>
        <RepositoryUrl>https://github.com/zhongwcool/Mar.Controls.git</RepositoryUrl>
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
        <PackageReleaseNotes>1. 优化圆型进度的显示效果.</PackageReleaseNotes>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <TargetFrameworks>net472;net6.0-windows;net7.0-windows;net481</TargetFrameworks>
    </PropertyGroup>

    <ItemGroup>
        <None Include="LICENSE" Pack="true" PackagePath=""/>
        <None Include="README.md" Pack="true" PackagePath=""/>
        <None Include="README.txt" Pack="true" PackagePath=""/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Mar.Console" Version="0.5.1"/>
        <PackageReference Include="System.Management" Version="7.0.2"/>
    </ItemGroup>

    <ItemGroup>
        <None Remove="Resources\console.ico"/>
        <Resource Include="Resources\console.ico"/>
    </ItemGroup>

</Project>
