<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <UseWPF>true</UseWPF>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>disable</Nullable>
        <LangVersion>12</LangVersion>
        <PackageVersion>0.3.8</PackageVersion>
        <Title>Some useful control for WPF.</Title>
        <Authors>Zhong Wei</Authors>
        <Description>Some useful control for WPF.</Description>
        <RepositoryUrl>https://github.com/zhongwcool/Mar.Controls.git</RepositoryUrl>
        <PackageLicenseFile>LICENSE</PackageLicenseFile>
        <PackageReleaseNotes>1. 增加PrintHello开关（EN：Add option PrintHello）</PackageReleaseNotes>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <TargetFrameworks>net6.0-windows;net7.0-windows;net472;net481;net8.0-windows</TargetFrameworks>
        <AssemblyVersion>0.3.8</AssemblyVersion>
        <FileVersion>0.3.8</FileVersion>
        <NeutralLanguage>zh-Hans-CN</NeutralLanguage>
    </PropertyGroup>

    <ItemGroup>
        <None Include="LICENSE" Pack="true" PackagePath=""/>
        <None Include="README.md" Pack="true" PackagePath=""/>
        <None Include="README.txt" Pack="true" PackagePath=""/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Mar.Console" Version="0.6.3"/>
        <PackageReference Include="System.Management" Version="8.0.0"/>
    </ItemGroup>

    <ItemGroup>
        <None Remove="Resources\console.ico"/>
        <Resource Include="Resources\console.ico"/>
    </ItemGroup>

</Project>
